{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["chrome"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@types": ["src/types"],
      "@ui/*": ["src/ui/*"],
      "@content/*": ["src/content/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
